<Window x:Class="WebMRecorder.ReplayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WebMRecorder"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="ReplayWindow"
        Width="300"
        Height="300"
        mc:Ignorable="d">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Image x:Name="ReplayImage" />
            <Slider x:Name="ProgressSlider" Orientation="Horizontal" />
            <StackPanel Orientation="Horizontal">
                <Button x:Name="PlayButton" Content="Play" />
                <Button x:Name="StopButton" Content="Stop" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
